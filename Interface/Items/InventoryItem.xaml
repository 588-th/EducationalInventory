<UserControl x:Class="Interface.Items.InventoryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface.Items"
             mc:Ignorable="d" 
             Height="200" d:DesignWidth="900">

    <Border CornerRadius="15" Background="#303041" Margin="10,5,10,5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TextBlockName" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="Name" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <TextBlock x:Name="TextBlockStartDate" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="StartDate" VerticalAlignment="Top"/>
            <TextBlock x:Name="TextBlockEndDate" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="EndDate" VerticalAlignment="Top" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockEquipment" HorizontalAlignment="Center" Margin="0,125,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="Equipment" VerticalAlignment="Top"/>
            <TextBlock x:Name="TextBlockUser" HorizontalAlignment="Center" Margin="0,125,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="User" VerticalAlignment="Top" Grid.Column="1"/>
        </Grid>
    </Border>
</UserControl>