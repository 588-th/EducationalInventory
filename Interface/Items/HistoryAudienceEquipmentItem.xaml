<UserControl x:Class="Interface.Items.HistoryAudienceEquipmentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface.Items"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="900">

    <Border CornerRadius="15" Background="#303041">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TextBlockAuditoruim" HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="Auditoruim" VerticalAlignment="Top"/>
            <TextBlock x:Name="TextBlockEquipment" HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="Equipment" VerticalAlignment="Top" Grid.Column="1"/>
            <TextBlock x:Name="TextBlockDate" HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="Date" VerticalAlignment="Top" Grid.Column="2"/>
        </Grid>
    </Border>
</UserControl>