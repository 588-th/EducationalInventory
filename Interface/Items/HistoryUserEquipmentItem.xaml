<UserControl x:Class="Interface.Items.HistoryUserEquipmentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface.Items"
             mc:Ignorable="d" 
             Height="150" d:DesignWidth="900">

    <Border CornerRadius="15" Background="#303041" Margin="10,5,10,5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TextBlockUser" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="User" VerticalAlignment="Center"/>
            <TextBlock x:Name="TextBlockEquipment" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="Equipment" VerticalAlignment="Center" Grid.Column="1"/>
            <TextBlock x:Name="TextBlockDate" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="22" Text="Date" VerticalAlignment="Center" Grid.Column="2"/>
        </Grid>
    </Border>
</UserControl>